<h1>Review this restaurant</h1>

<%= form_for [@restaurant, @restaurant.reviews.build] do |f| %>

   <%= f.label :comment %>
   <%= f.text_field :comment %>
   <%= f.hidden_field :user_id, value: current_user.id %>
   
   <% (1..5).each do |n| %>
   <%= f.label :rating, n.to_s %>
   <%= f.radio_button :rating, n %>
   
   <% end %>
   <%= f.submit :Submit %>

<% end %>
